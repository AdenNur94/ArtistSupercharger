@page "/artist"
@using ArtistSupercharger.Shared;
@inject HttpClient client;

<h1>Enter artist name</h1>

<form>
    <InputText @bind-Value="artistName" />
    <button type="submit">Search</button>
</form>

@if (artist != null)
{
    <div>
        <h2>@artist.Name</h2>
        <p>Genre: @artist.Genre</p>
        <p>Popularity: @artist.Popularity</p>
        <p>Artist ID: @artist.ArtistID</p>
        <p>Followers: @artist.Followers</p>
        <p>Image URL: @artist.ImageUrl</p>
    </div>
}

@code {
    private string artistName;
    private Artist artist;

    private async Task OnSubmit()
    {
        // Call API to get artist data
        artist = await GetArtist(artistName);
    }
}